<!doctype html>
<html lang="en">
  <body>
    <main role="main">
      <section class="jumbotron text-center">
        <div class="container">
          <p class="lead text-muted">Monitoring and Analysing risks.</p>
        </div>
      </section>

      <div class="album py-5 bg-light">
        <div class="container">
          <div class="row">
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <%# <%= image_tag 'resource_breakdown_structure.svg' %>
                <%# <%= render inline: Rails.root.join('app/assets/images/resource_breakdown_structure.svg').read %>
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Break Down Structures" alt="Card image cap">
                <div class="card-body">
                  <%# <p class="card-text">Break Down Structures</p> %>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= button_to "View", equipment_index_path(source: "BreakDownStructures"), method:'get', class:"btn btn-sm btn-outline-secondary" %>
                      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success"><%= $break_down_structure_notification %></span>
                    </div>
                    <small class="text-muted"></small>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <%# <%= render inline: Rails.root.join('app/assets/images/resource_breakdown_structure.svg').read %>
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Measurements" alt="Card image cap">
                <div class="card-body">
                  <%# <p class="card-text">Measurements</p> %>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= button_to "View", load_measurements_component_path, method:'get', class:"btn btn-sm btn-outline-secondary" %>
                      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success"><%= $measurements_notification %></span>
                    </div>
                    <small class="text-muted"></small>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Alarms" alt="Card image cap">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <%= link_to "View", equipment_index_path(source: "Alarms"), method:'get', class:"btn btn-sm btn-outline-secondary" %>
                      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success"><%= $alarms_notification %></span>
                    </div>
                    <small class="text-muted"></small>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <%# <%= image_tag 'standby.png' %>
                <img class="card-img-top" data-src="holder.js/100px225?theme=thumb&bg=55595c&fg=eceeef&text=Active and StandBy Components" alt="Card image cap">
                <div class="card-body">
                  <%# <p class="card-text">Components</p> %>
                  <div class="btn-group">
                      <%= button_to "View", load_active_component_path, method: 'get', class: "btn btn-sm btn-outline-secondary" %>
                      <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-success"><%= $active_components_notification %></span>
                  </div>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted"></small>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
