<h1>Break Down Structure</h1>
<div class="text-end">
  <%= button_to new_equipment_path, method: :get, class: "btn" do%>
    <h1><i class="bi bi-building-fill-add"></i></h1>
  <% end %>
</div>
<div class="equipments">
  <% if @equipments.present? %>
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th scope="col">UUID</th>
          <th scope="col">Id In Source</th>
          <th scope="col">Short Name</th>
          <th scope="col">Functional Location</th>
        </tr>
      </thead>

      <tbody>
        <% @equipments.each do |equipment| %>
          <tr class="accordion accordion-flush" >
            <div class="accordion-item accordion-button">
                <td><%= equipment.uuid %></td>
                <td><%= equipment.id_in_source %></td>
                <td><%= equipment.short_name %></td>
                <td><%= equipment.functional_location_id %></td>
                <%# <td><%= link_to "Show", equipment</td> %>
                <!--<td><%= link_to "Edit", edit_equipment_path(equipment) %></td> -->
                <%# <td><%= link_to "Destroy", equipment, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }</td> %>
            </div>
          </tr>
        <% end %>
        <%= @messages.id %>
        <%= @messages.media_type %>
        <%= @messages.content %>

        <%# <% @messages.each do |read_message| %>
        <%#  <%= read_message.message_id %>
        <%#  <%= read_message.message_type %>
        <%#  <%= read_message.message_content %>
        <%# <% end %>
      </tbody>
    </table>
    <br>
  <% else %>
    <p>Equipment not found.</p>
  <% end %>
</div>